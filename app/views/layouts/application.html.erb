<% content_for :base_content do %>
    <div id="container">
      <div id="header">
        <h1><a href="/"><%= t('application.app_name') %></a></h1>
        <div id="user-navigation">
          <ul class="wat-cf">
            <% if current_user %>
                <li><%= link_to t("layout.edit_profile"), edit_profile_path %></li>
                <li>logged in as <%= current_user.username %> (<%= current_user.role %>)</li>
                <li><%= link_to t('layout.logout'), logout_path %></li>
            <% else %>
                <li><%= link_to t("layout.reset_password"), new_password_reset_path %></li>
                <li><%= link_to t("layout.login"), login_path %></li>
            <% end %>
          </ul>
        </div>
        <div id="main-navigation">
          <ul class="wat-cf"></ul>
        </div>
      </div>
      <div id="wrapper" class="wat-cf">
        <div class="flash">
          <% flash.each do |type, message| -%>
              <div class="message <%= type %>">
                <p><%= t(message) %></p>
              </div>
          <% end -%>
        </div>
        <div id="main">
          <%= yield :application_content or yield %>
        </div>
        <div id="sidebar">
          <%= yield :sidebar %>
        </div>
      </div>
    </div>
<% end %>

<%= render :file => 'layouts/base' %>
